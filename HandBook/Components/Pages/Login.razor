@page "/login"
@inject NavigationManager NavigationManager

<div class="auth-container">
    <div class="auth-header">
        <img src="images/logo.png" alt="Logo" class="logo" />
        <h1>লগইন করুন</h1>
        <p>ফোন নম্বর এবং পাসওয়ার্ড দিয়ে লগইন করুন</p>
    </div>

    <div class="auth-card">
        <div class="form-group">
            <label>ফোন নম্বর <span class="required-star">*</span></label>
            <input type="tel" class="form-input" placeholder="০১XXXXXXXXX" @bind="phoneNumber" />
        </div>

        <div class="form-group">
            <label>পাসওয়ার্ড <span class="required-star">*</span></label>
            <input type="password" class="form-input" placeholder="••••••••" @bind="password" />
        </div>

        <button style="width: 100%; padding: 10px; background-color: #CCAD00; color: black; border: none; border-radius: 4px; font-weight: bold;" @onclick="LoginUser">লগইন করুন</button>

        <div class="auth-footer">
            <span>আপনার অ্যাকাউন্ট নেই?</span>
            <a href="/register">নিবন্ধন করুন</a>
        </div>
    </div>
</div>

